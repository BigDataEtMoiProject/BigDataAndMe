<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightGreen</item>
        <item name="colorPrimaryDark">@color/lightGrey</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:listPreferredItemHeightSmall">85dp</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/circular_medium</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="fontFamily">@font/circular_medium</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbarTheme">
        <!-- Used to tint the back arrow, menu and spinner arrow -->
        <!--<item name="colorPrimary">@color/black</item>-->
        <!--<item name="colorPrimaryDark">@color/black</item>-->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="iconTint">@color/black</item>
        <!--<item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="colorControlNormal">@color/black</item>
        <!--<item name="android:textColor">@color/colorAccent</item>-->
        <!--<item name="android:textColorHighlight">@color/colorAccent</item>-->
        <!--<item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>-->
        <!--<item name="searchViewStyle">@style/MySearchViewStyle</item>-->

    </style>

    <style name="NavItemAppearance">
        <item name="fontFamily">@font/circular_medium</item>
    </style>

    <style name="TabItemAppearance" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/circular_medium</item>
    </style>

</resources>
